# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.box = "generic/fedora35"
  config.vm.box_version = "3.6.14"
  config.vm.synced_folder ".", "/vagrant", type: "rsync", rsync__exclude: "*.qcow2"

  config.vm.provider "libvirt" do |lv|
    lv.memory = "8192"
  end

  config.vm.provision "shell", inline: <<-SHELL
    echo "lkd-fedora-vagrant" > /etc/hostname
    hostnamectl hostname $(cat /etc/hostname)

    dnf update -y

    dnf -y install dnf-plugins-core
    dnf config-manager --add-repo https://download.docker.com/linux/fedora/docker-ce.repo
    dnf -y install docker-ce docker-ce-cli containerd.io docker-compose-plugin

    dnf -y groupinstall "Development Tools"
    dnf install -y rsync git qemu-system-x86 qemu-img debootstrap bc openssl

    systemctl start docker

    cp -r /vagrant /test
    cd /test

    sed -i -e '/--user.*/d' -e '/^\s+$/d' -e "s#/home/dbg/#/root/#" lkd_debug.sh

    ./lkd_init.sh
  SHELL
end
